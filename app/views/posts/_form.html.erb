<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <span class="title">晩ごはん設定:</span>
    <%= form.select :content,[["◯","◯"], ["❌","❌"], ["🔺","🔺"], ["未定","未定"]], class: "select" %>
  </div>

  <div class="time">
    <%# 全体の動きを把握したい時はこのコメントを外して実行すること。その際は①のコードはコメントアウトする %>
    <%= @post.start_time %>
    <%# %>
    <%= form.hidden_field :start_time, {default: :start_time}%>

    <%# 実行する際にコメントアウトするコード① 今は不入力フォームの見栄えの確認のためにこちらを採用している%>
    <%#
    <%= form.date_select :start_time, {default: :start_time}%>
    <%#
    <div class="end-time">
      <span class="arrow">〉</span>
      <%= form.date_select :start_time, {default: :start_time}%>
    </div>

  </div>

  <div class="field">
    <span class="title">詳細:</span>
    <%= form.select :comment,[["バイト","バイト"], ["遊び","遊び"], ["勉強","勉強"], ["その他","その他"], ["特になし",""]], class: "select" %>
  </div>

  <div class="actions">
    <%= form.submit("決定")%>
  </div>
<% end %>
