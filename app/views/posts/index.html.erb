<%= render 'layouts/header' %>

<%= month_calendar events: @posts do |date, posts| %>
  
  <%=  date.day  %>
  
    <% if posts.blank? && date >= Date.today %>
      <div class="content">
        未定
      </div>
    <% elsif date >= Date.today %>

      <% posts.each do |post| %>

        <div class="content">
          <%=  post.content  %>
        </div>

        <div class="comment">
          <%=  post.comment  %>
        </div>

      <% end %>

    <% end %>
    
<% end %>
