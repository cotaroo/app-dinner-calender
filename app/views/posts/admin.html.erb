<p id="notice"><%= notice %></p>

<h1>Calender</h1>

<br>

<%= month_calendar events: @posts do |date, posts| %>
  <%= link_to date , new_post_path(start_time: date)  %>
  
  <% if posts.blank? && date > Date.today && @count > Post.count%>
    <div>
      未定
    </div>
  <% elsif posts.blank? && date > Date.today && @count <= Post.count %>
    <div>
      ○
    </div>
  <% else %>
    <% posts.each do |post| %>
      <% @count += 1 %>
      <div>
        <%= link_to post.content, edit_post_path(post,start_time: date)  %>
      </div>
    <% end %>

  <% end %>

<% end %>
